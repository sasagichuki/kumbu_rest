<%- model_class = DeathNotice -%>
<div class="page-header">
  <h1><%=t '.title', :default => DeathNotice %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_added) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.date_added %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:client_born) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.client_born %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:client_died) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.client_died %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:eulogy) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.eulogy %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:burial_date) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.burial_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:meeting_date) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.meeting_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:burial_location) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.burial_location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:meeting_location) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.meeting_location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:client_picture) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.client_picture %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comments) %></dt>
      <dd><pre class="prettyprint"><%= @death_notice.comments %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              death_notices_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_death_notice_path(@death_notice), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              death_notice_path(@death_notice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

