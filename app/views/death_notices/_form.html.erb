<%= form_for @death_notice, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_added, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :date_added, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :client_born, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :client_born, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :client_died, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :client_died, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :eulogy, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :eulogy, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :burial_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :burial_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :meeting_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :meeting_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :burial_location, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :burial_location, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :meeting_location, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :meeting_location, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :client_picture, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :client_picture, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :comments, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  death_notices_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
